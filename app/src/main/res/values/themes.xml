<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FlipkartClone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryContainer">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary color: Flipkart Dark Blue -->
        <item name="android:colorSecondary">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Tertiary color: Mid Grey (optional, can be customized) -->
        <item name="colorTertiary">@color/mid_grey</item>
        <item name="colorOnTertiary">@color/white</item>

        <!-- Background color: White -->
        <item name="colorOnBackground">@color/black</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Surface color: Light Grey for contrast -->
        <item name="colorSurface">@color/light_grey</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error colors -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.FlipkartClone" parent="Base.Theme.FlipkartClone" />
</resources>